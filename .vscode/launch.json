    "version": "0.2.0",
    "configurations": [
        {
            "type": "cmake",
            "request": "launch",
            "name": "CMake: Configure project",
            "cmakeDebugType": "configure",
            "clean": false,
            "configureAll": false
        },
        {
            "name": "(lldb) Launch",
            "type": "lldb-mi",
            "request": "launch",
            "target": "build/Debug/HelloWorld",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        {
            "name": "(gdb) Launch",
            "type": "gdb",
            "request": "launch",
            "target": "build/Debug/HelloWorld",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        }
    ]
}